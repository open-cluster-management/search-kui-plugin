{
  "include": [
    "./src",
    "./src/i18n/*.json",
    "./src/lib/shared/*.json"
  ],
  "compilerOptions": {
    "downlevelIteration": true,
    "composite": true,
    "outDir": "mdist",
    "rootDir": "src",
    "jsx": "react",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2016",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext", "es6", "dom.iterable", "scripthost"]
  }
}
